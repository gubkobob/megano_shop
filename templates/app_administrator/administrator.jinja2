{% extends 'base.jinja2' %}

{% block title %}
   Административный раздел
{% endblock %}

{% block body%}


    <div class="Middle Middle_top">
        <div class="Section Section_column Section_columnLeft">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">настройки cache
                            </strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="NavigateProfile">
                                <ul class="menu menu_vt">
                                    <li class="menu-item"><a class="btn btn_primary" href="{{ url('appadministrator:cache_settings') }}">cache</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <p></p>
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">Настройки сайта
                            </strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="NavigateProfile">
                            {% for setting in settings %}
                                <li class="menu-item">Товары ограниченного тиража {{ setting.limited_edition_products }}</li>
                                <li class="menu-item">Горячие предложения {{ setting.hot_offers }}</li>
                                <li class="menu-item">Популярные товары {{ setting.popular_products }}</li>
                                <li class="menu-item">Баннеры на главной {{ setting.products_banner }}</li>
                                <li class="menu-item">Просмотренные товары {{ setting.viewed_products }}</li>
                                <li class="menu-item">Избранные категории {{ setting.selected_categories }}</li>
                                <li class="menu-item">Время обновления кэша {{ setting.cache_time }}</li>
                                <a class="btn btn_primary" href="{{ url('appadministrator:settings_create') }}">Редактировать</a>
                                </ul>
                            {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

{% endblock %}