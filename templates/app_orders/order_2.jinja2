{% extends 'base.jinja2' %}

{% block title %}
    Оформление заказа
{% endblock %}

{% block body %}
<div class="Middle Middle_top">
        <div class="Section Section_column Section_columnRight Section_columnWide Order">
            <div class="wrap">


                <div class="Section-column">
                    <div class="Section-columnSection">
                        <header class="Section-header">
                            <strong class="Section-title">Прогресс заполнения
                            </strong>
                        </header>
                        <div class="Section-columnContent">
                            <div class="NavigateProfile">
                                <ul class="menu menu_vt">
                                    <li class="menu-item_ACTIVE menu-item "><a class="menu-link Order-next" href="../checkout/#step1">Шаг 1. Параметры пользователя</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link Order-next" href="../checkout/#step2">Шаг 2. Способ доставки</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link Order-next" href="../checkout/#step3">Шаг 3. Способ оплаты</a>
                                    </li>
                                    <li class="menu-item"><a class="menu-link Order-next" href="#step4">Шаг 4. Подтверждение заказа</a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="Section-content">
                    <div class="Order-block Order-block_OPEN" id="step4">
                        <header class="Section-header Section-header_sm">
                            <h2 class="Section-title">Шаг 4. Подтверждение заказа
                            </h2>
                        </header>
                        <!--+div.Order.-confirmation-->
                        <div class="Order-infoBlock">
                            <div class="Order-personal">
                                <div class="row">
                                    <div class="row-block">
                                        <div class="Order-info">
                                            <div class="Order-infoType">ФИО:
                                            </div>
                                            <div class="Order-infoContent">{{ form.full_name }}
                                            </div>
                                        </div>
                                        <div class="Order-info">
                                            <div class="Order-infoType">Телефон:
                                            </div>
                                            <div class="Order-infoContent">{{ form.phone_number }}
                                            </div>
                                        </div>
                                        <div class="Order-info">
                                            <div class="Order-infoType">E-mail:
                                            </div>
                                            <div class="Order-infoContent">{{ form.email }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-block">
                                        <div class="Order-info Order-info_delivery">
                                            <div class="Order-infoType">Тип доставки:
                                            </div>
                                            <div class="Order-infoContent">{{ form.delivery }}
                                            </div>
                                        </div>
                                        <div class="Order-info">
                                            <div class="Order-infoType">Город:
                                            </div>
                                            <div class="Order-infoContent">{{ form.city }}
                                            </div>
                                        </div>
                                        <div class="Order-info">
                                            <div class="Order-infoType">Адрес:
                                            </div>
                                            <div class="Order-infoContent">{{ form.address }}
                                            </div>
                                        </div>
                                        <div class="Order-info Order-info_pay">
                                            <div class="Order-infoType">Оплата:
                                            </div>
                                            <div class="Order-infoContent">{{ form.payment }}
                                            </div>
                                        </div>
                                        <div class="Order-info Order-info_pay">
                                            <div class="Order-infoType">Комментарий к заказу:
                                            </div>
                                            <div class="Order-infoContent">{{ form.comment }}
                                            </div>
                                        </div>
                                        {% if form.discount != 0 %}
                                            <div class="Order-info Order-info_pay">
                                                <div class="Order-infoType">Размер скидки по купону:
                                                </div>
                                                <div class="Order-infoContent">{{ form.discount }}%
                                                </div>
                                            </div>
                                        {% endif %}

                                    </div>
                                </div>
                            </div>
                            <div class="Cart Cart_order">
                            {% for item in order_items %}
                                <div class="Cart-product">
                                    <div class="Cart-block Cart-block_row">
                                        <div class="Cart-block Cart-block_pict">
                                        <a class="Cart-pict" href="{{ url('appcatalog:product_details', pk=item.product_in_shop.id) }}">
                                            <img class="Cart-img" src="{{ item.product_in_shop.product.image_main.url }}"
                                            alt="{{ item.product_in_shop.image_main }}" />
                                        </a>
                                        </div>
                                        <div class="Cart-block Cart-block_info">
                                            <a class="Cart-title" href="{{ url('appcatalog:product_details', pk=item.product_in_shop.id) }}">
                                                {{ item.product_in_shop.product.name }}</a>
                                            <div class="Cart-desc">{{ item.product_in_shop.product.description }}</div>
                                        </div>
                                        <div class="Cart-block Cart-block_price">
                                            <div class="Cart-price">{{ item.price }}

                                            </div>
                                        </div>
                                    </div>
                                    <div class="Cart-block Cart-block_row">
                                        <div class="Cart-block Cart-block_amount">{{ item.quantity }} шт.
                                        </div>
                                    </div>
                                </div>
                                    <div class="Cart-block Cart-block_total">
                                        <strong class="Cart-title">Итого:
                                        </strong><span class="Cart-price">{{ item.get_cost() }}</span>
                                    </div>
                                {% endfor %}
                                <div class="Cart-total">
                                    <div class="Cart-block Cart-block_total">
                                        <strong class="Cart-title">Общая сумма заказа:
                                        </strong><span class="Cart-price">{{ get_total_price - form.delivery_cost }}</span>
                                    </div>
                                    <div class="Cart-block Cart-block_total">
                                        <strong class="Cart-title">Стоимость доставки:
                                        </strong><span class="Cart-price">{{ form.delivery_cost }}</span>
                                    </div>
                                    <div class="Cart-block Cart-block_total">
                                        <strong class="Cart-title">Итоговая сумма заказа с доставкой:
                                        </strong><span class="Cart-price">{{ get_total_price }}</span>
                                    </div>
                                    <div class="Cart-block">
                                        <a class="btn btn_primary btn_lg" href='/payment?order={{form.id}}'>Оплатить</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}