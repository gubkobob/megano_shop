{% extends 'base.jinja2' %}
{% block title %}
    {{ if category }}{{ category.slug }}{{ if subcategory }} / {{ subcategory.slug }}{{ endif }}{{ else }}Category{{ endif }}
{% endblock %}
{% block base %}
<div class="Header-searchWrap">
    <div class="wrap">
        <div class="Header-categories">
            <ul class="CategoriesButton">
                <div class="CategoriesButton-title">
                    <div class="CategoriesButton-icon"><img src="{{ static (assets/img/icons/allDep.svg) }}" alt="allDep.svg" />
                    </div><span class="CategoriesButton-text"><a  href="{{ url 'appcatalog:categories_list' }}">{{ if not category }}{{ endif }}Все категории</a></span>
                    <div class="CategoriesButton-arrow">
                    </div>
                </div>
                <div class="CategoriesButton-content">
                    <ul>{{ for category in categories }}
                        <li>
                            <div class="CategoriesButton-link"><a href="#">
                                <div class="CategoriesButton-icon"><img src="{{ static (assets/img/icons/departments/3.svg) }}" alt="3.svg" />
                                </div><span class="CategoriesButton-text"><a href="{{ category.get_absolute_url }}">{{ category.name }}</a></span>
                            </a><a class="CategoriesButton-arrow" href="#"></a>
                            <ul>{{ for subcategory in subcategories }}
                                <li>{{ if subcategory.category_id == category.id }}
                                    <div class="CategoriesButton-submenu"><a class="CategoriesButton-link" href="#">
                                    <div class="CategoriesButton-icon"><img src="assets/img/icons/departments/1.svg" alt="1.svg" />
                                    </div><span class="CategoriesButton-text"><a href="{{ subcategory.get_absolute_url }}">{{ subcategory.name }}</a></span></a>
                                    {{ endif }}
                                </li>
                                {{ endfor }}
                            </ul>
                        </li>
                        {{ endfor }}
                    </ul>
{% endblock %}