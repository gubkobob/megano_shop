{% extends 'base.jinja2' %}

{% block title %}
   Главная
{% endblock %}

{% block body%}

    <header class="Header">
        <div class="Header-slider">
            <div class="Slider Slider_main">
              <div class="Slider-box">
              {% for banner in products_banners %}
                <div class="Slider-item">
                  <div class="Slider-content">
                    <div class="row">
                      <div class="row-block">
                        <strong class="Slider-title">{{ banner.name }}</strong>
                        <div class="Slider-text">{{ banner.description }}</div>
                        <div class="Slider-footer"><a class="btn btn_primary" href="#">Get Started</a>
                        </div>
                      </div>
                      <div class="row-block">
                        <div class="Slider-img">
                            <img src="{% if banner.image %}{{ banner.image.url }}
                                          {% else %}{{ static('assets/img/no_photo.jpg') }}
                                          {% endif %}"alt="{{ banner.image }}"/>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                {% endfor %}
              </div>
              <div class="Slider-navigateWrap">
                <div class="Slider-navigate">
                </div>
              </div>
            </div>
        </div>
    </header>
    <div class="Middle">
        <div class="Section">
            <div class="wrap">
                <div class="BannersHome"><a class="BannersHomeBlock" href="#">
                        <div class="BannersHomeBlock-row">
                            <div class="BannersHomeBlock-block">
                                <strong class="BannersHomeBlock-title">Video Cards
                                </strong>
                                <div class="BannersHomeBlock-content">from&#32;<span class="BannersHomeBlock-price">$199.00</span>
                                </div>
                            </div>
                            <div class="BannersHomeBlock-block">
                                <div class="BannersHomeBlock-img"><img src="assets/img/content/home/videoca.png" alt="videoca.png" />
                                </div>
                            </div>
                        </div>
                    </a><a class="BannersHomeBlock" href="#">
                        <div class="BannersHomeBlock-row">
                            <div class="BannersHomeBlock-block">
                                <strong class="BannersHomeBlock-title">Head Phones
                                </strong>
                                <div class="BannersHomeBlock-content">from&#32;<span class="BannersHomeBlock-price">$210.00</span>
                                </div>
                            </div>
                            <div class="BannersHomeBlock-block">
                                <div class="BannersHomeBlock-img">
                                    <img src="assets/img/content/home/videoca.png" alt="videoca.png" />
                                </div>
                            </div>
                        </div>
                    </a><a class="BannersHomeBlock" href="#">
                        <div class="BannersHomeBlock-row">
                            <div class="BannersHomeBlock-block">
                                <strong class="BannersHomeBlock-title">Bass Speakers
                                </strong>
                                <div class="BannersHomeBlock-content">from&#32;<span class="BannersHomeBlock-price">$159.00</span>
                                </div>
                            </div>
                            <div class="BannersHomeBlock-block">
                                <div class="BannersHomeBlock-img"><img src="assets/img/content/home/videoca.png" alt="videoca.png" />
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="Section Section_column Section_columnLeft Section_columnDesktop">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection Section-columnSection_mark">
                        <header class="Section-columnHeader">
                            <strong class="Section-columnTitle">ОГРАНИЧЕННЫЕ ПРЕДЛОЖЕНИЯ </strong>
                        </header>
                        <div class="Card">
                        {% for one_product_limited in limited_offers %}
                            <a class="Card-picture" href="#">
                                <img  class="Card-picture_size-img" src="{% if one_product_limited.image %}{{ one_product_limited.image.url }}
                                          {% else %}{{ static('assets/img/no_photo.jpg') }}
                                          {% endif %}"alt="{{ one_product_limited.image }}"/>
                            </a>
                            <div class="Card-content">
                                <strong class="Card-title"><a href="#">{{one_product_limited.name}}</a></strong>
                                <div class="Card-description">
                                    <div class="Card-cost">
                                        <span class="Card-priceOld">$115.00</span><span class="Card-price">{{one_product_limited.price}}</span>
                                    </div>
                                    <div class="Card-category">{{one_product_limited.category}} / {{one_product_limited.subcategory}}</div>
                                </div>
                                <div class="CountDown">
                                    <div class="CountDown-block">
                                        <div class="CountDown-wrap">
                                            <div class="CountDown-days">
                                            <span id="d" ></span>
                                            </div><span class="CountDown-label">days</span>
                                        </div>
                                    </div>
                                    <div class="CountDown-block">
                                        <div class="CountDown-wrap">
                                            <div class="CountDown-hours">
                                            <span id="h" ></span>
                                            </div><span class="CountDown-label" id="h">hours</span>
                                        </div>
                                    </div>
                                    <div class="CountDown-block">
                                        <div class="CountDown-wrap">
                                            <div class="CountDown-minutes">
                                            <span id="m" ></span>
                                            </div><span class="CountDown-label" id="m">mins</span>
                                        </div>
                                    </div>
                                    <div class="CountDown-block">
                                        <div class="CountDown-wrap">
                                            <div class="CountDown-secs">
                                            <span id="s" ></span>
                                            </div><span class="CountDown-label" id="s">secs</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="Section-content">
                    <header class="Section-header">
                        <h2 class="Section-title">Популярные товары
                        </h2>
                    </header>
                    <div class="Cards">
                    {% for top_product in top_products %}
                        <div class="Card hide_md">
                            <a class="Card-picture" href="#">
                                <img  class="Card-picture_size-img" src="{% if top_product.image %}{{ top_product.image.url }}
                                          {% else %}{{ static('assets/img/no_photo.jpg') }}
                                          {% endif %}"alt="{{ top_product.image }}"/>
                            </a>
                            <div class="Card-content">
                                <strong class="Card-title"><a href="#">{{top_product.name}}</a>
                                </strong>
                                <div class="Card-description">
                                    <div class="Card-cost"><span class="Card-price">{{top_product.price}}</span>
                                    </div>
                                    <div class="Card-category">{{top_product.category}}/{{top_product.subcategory}}
                                    </div>
                                    <div class="Card-hover">
                                        <a class="Card-btn" href="#">
                                            <img src="{{ static ('assets/img/icons/card/cart.svg') }}" alt="cart.svg" />
                                        </a>
                                        <a class="Card-comparison"/>
                                            <img src="{{ static ('assets/img/icons/card/comparison.svg') }}" width="20px" alt="comparison.svg"/>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="Section Section_column Section_columnRight">
            <div class="wrap">
                <div class="Section-content">
                    <div class="Slider Slider_carousel">
                        <header class="Section-header Section-header_close">
                            <h2 class="Section-title">Ограниченный тираж
                            </h2>
                            <div class="Section-control">
                                <div class="Slider-navigate">
                                </div>
                            </div>
                        </header>
                        <div class="Slider-box Cards">
                        {% for product_limit in products_limited %}
                            <div class="Slider-item">
                                <div class="Slider-content">
                                    <div class="Card">
                                        <a class="Card-picture" href="#">
                                            <img class="Card-picture_size-img-popular" src="{% if product_limit.image %}{{ product_limit.image.url }}
                                                {% else %}{{ static('assets/img/no_photo.jpg') }}
                                                {% endif %}"alt="{{ product_limit.image }}"/>
                                        </a>
                                        <div class="Card-content">
                                            <strong class="Card-title"><a href="#">{{product_limit.name}}</a>
                                            </strong>
                                            <div class="Card-description">
                                                <div class="Card-cost"><span class="Card-price">{{product_limit.price}}</span>
                                                </div>
                                                <div class="Card-category">{{product_limit.category}}/{{product_limit.subcategory}}
                                                </div>
                                                <div class="Card-hover">
                                                    <a class="Card-btn" href="#">
                                                        <img src="{{ static ('assets/img/icons/card/cart.svg') }}" alt="cart.svg" />
                                                    </a>
                                                    <a class="Card-comparison"/>
                                                        <img src="{{ static ('assets/img/icons/card/comparison.svg') }}" width="20px" alt="comparison.svg"/>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

{% endblock %}